{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-throw-literal": "error"
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
